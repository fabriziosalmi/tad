[Unit]
Description=TAD P2P Chat Service
Documentation=https://github.com/yourusername/tad
After=network.target network-online.target
Wants=network-online.target

[Service]
Type=simple
User=%i
Group=%i

# Working directory (adjust to your installation path)
WorkingDirectory=/opt/tad

# Start command (adjust path to your venv)
ExecStart=/opt/tad/venv/bin/python -m tad.main

# Restart policy
Restart=on-failure
RestartSec=10
StartLimitBurst=5
StartLimitIntervalSec=300

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=tad

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/opt/tad
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

# Resource limits (optional)
# LimitNOFILE=65536
# MemoryMax=512M
# CPUQuota=50%

[Install]
WantedBy=multi-user.target

# Installation instructions:
#
# 1. Copy this file:
#    sudo cp tad.service /etc/systemd/system/
#
# 2. Edit paths in WorkingDirectory and ExecStart if needed:
#    sudo nano /etc/systemd/system/tad.service
#
# 3. Reload systemd:
#    sudo systemctl daemon-reload
#
# 4. Enable on boot:
#    sudo systemctl enable tad
#
# 5. Start service:
#    sudo systemctl start tad
#
# 6. Check status:
#    sudo systemctl status tad
#
# 7. View logs:
#    sudo journalctl -u tad -f
#
# 8. Stop service:
#    sudo systemctl stop tad
#
# 9. Restart service:
#    sudo systemctl restart tad
